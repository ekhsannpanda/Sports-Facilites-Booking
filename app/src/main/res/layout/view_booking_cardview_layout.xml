<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="15dp"
    android:layout_margin="6dp">

    <!-- design for how the cards will look like -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/card_layout_view_booking_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 1"
            android:textColor="@android:color/white"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/card_layout_view_booking_subheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Line 2"
            android:textSize="22sp"
            android:layout_marginStart="8dp"
            android:layout_below="@+id/card_layout_view_booking_header"/>

        <TextView
            android:id="@+id/dash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/card_layout_view_booking_subheader"
            android:layout_below="@id/card_layout_view_booking_header"
            android:textStyle="bold"
            android:text="  -  "
            android:textSize="22sp" />
        <TextView
            android:id="@+id/card_layout_view_booking_subheader_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dash"
            android:layout_below="@id/card_layout_view_booking_header"
            android:text="Line 3"
            android:textSize="22sp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>